{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Influenza Cases in the World (3 Jan 2022 - 11 Sep 2022)",
    "width": 800,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/spra0039/Homework-9/main/js/ne_110m_admin_0_countries.topojson",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
    },
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/spra0039/Homework-9/main/js/oceans.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "skyblue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/spra0039/Homework-9/main/js/ne_110m_graticules_30.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/spra0039/Homework-9/main/data/World_graph_dataset_(with_population).csv"
                        },
                        "key": "Country",
                        "fields": [
                            "Confirmed",
                            "Population"
                        ]
                    }
                },
                {
                    "calculate": "datum.Confirmed/datum.Population * 100000",
                    "as": "Cases per 100,000 population"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "encoding": {
                "color": {
                    "field": "Cases per 100,000 population",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            1,
                            10,
                            50,
                            100
                        ],
                        "range": [
                            "#fdbe85",
                            "#F48C06",
                            "#D00000",
                            "#9D0208",
                            "#6A040F"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "title": "Total Cases",
                        "field": "Confirmed",
                        "type": "quantitative"
                    },
                    {
                        "field": "Cases per 100,000 population",
                        "type": "quantitative",
                        "format": ".3f"
                    }
                ]
            }
        }
    ]
}